<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
     internalLogLevel="trace"
internalLogFile="log/internal-nlog.txt"
throwExceptions="true"
throwConfigExceptions="true">

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
		<add assembly="NLog.Database" />
	</extensions>

	<!-- the targets to write to -->
	<targets async="true">
		<target name="file"
				xsi:type="File"
				fileName="Logs\${level}-${shortdate}.log"
				layout="${longdate}-${uppercase:${level}}-${logger}-${aspnet-request-url}-${aspnet-mvc-action}:${newline}${message}${newline}${exception:format=tostring}${newline}${aspnet-request-posted-body}" />
		<target xsi:type="Database" name="databaseTarget"
				   connectionString="Data Source=.; Initial Catalog=db_cong;Persist Security Info=False;User ID=sa;Password=sa;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=True;Connection Timeout=30;"
				   commandText="INSERT INTO Logs (LogDate, LogLevel, Logger, Message, Exception) VALUES (@logdate, @level, @logger, @message, @exception)">

			<!-- Tham số truyền vào câu lệnh SQL -->
			<parameter name="@logdate" layout="${longdate}" />
			<parameter name="@level" layout="${level:uppercase=true}" />
			<parameter name="@logger" layout="${logger}" />
			<parameter name="@message" layout="${message}" />
			<parameter name="@exception" layout="${exception:tostring}" />
		</target>
		<!--<target
			name="db"
			xsi:type="Database"
			dbProvider="Microsoft.Data.SqlClient.SqlConnection, Microsoft.Data.SqlClient"
			connectionString="Data Source=.; Initial Catalog=db_cong;Persist Security Info=False;User ID=sa;Password=sa;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=True;Connection Timeout=30;"
			commandText="INSERT INTO log_app(created,msg,loglevel,exception,logger,url,method,body,app) VALUES (@datetime,@msg,@level,@exception,@logger,@url,@method,@body,@app)">
			<parameter name="@datetime" layout="${longdate}" />
			<parameter name="@msg" layout="${message}" />
			<parameter name="@level" layout="level" />
			<parameter name="@exception" layout="exception" />
			<parameter name="@logger" layout="${logger}" />
			<parameter name="@url" layout="${aspnet-request-url}" />
			<parameter name="@method" layout="${aspnet-request-method}" />
			<parameter name="@body" layout="${aspnet-request-posted-body}" />
			<parameter name="@app" layout="AppApi" />
		</target>-->

		<target xsi:type="ColoredConsole" name="console"
		   layout="${longdate} ${level:uppercase=true} ${logger} ${message}" />
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<!--<logger name="Microsoft.*" minlevel="Trace" writeTo="null" final="true" />-->
		<logger name="*" minlevel="Info" writeTo="file" />
		<logger name="*" minlevel="Info" writeTo="console" />
		<logger name="*" minlevel="Debug" writeTo="databaseTarget" />
	</rules>
</nlog>