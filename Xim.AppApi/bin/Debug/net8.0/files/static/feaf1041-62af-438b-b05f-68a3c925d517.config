<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
	  internalLogLevel="Off"
      internalLogFile="Logs-internal-nlog-AspNetCore.txt">

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
		<add assembly="NLog.Database"/>
	</extensions>

	<!-- the targets to write to -->
	<targets async="true">
		<!-- <target xsi:type="File" name="file" fileName="Logs-${shortdate}.log"
				layout="${longdate}-${uppercase:${level}}-${logger}:${newline}${message}${newline}${exception:format=tostring}" /> -->

		<target xsi:type="Database"
				name="db"
				connectionString="Data Source=.\sql2019dev; Initial Catalog=logs; Integrated Security=false;User Id=app_user;Password=dD#$@1A123;Trusted_Connection=true"
				commandText="INSERT INTO Logs(Created,Msg,Level,Exception,Logger,App) VALUES (@datetime,@msg,@level,@exception,@logger,@app)">

			<parameter name="@datetime" layout="${date}" />
			<parameter name="@msg" layout="${message}" />
			<parameter name="@level" layout="${level}" />
			<parameter name="@exception" layout="${exception}" />
			<parameter name="@logger" layout="${logger}" />
			<parameter name="@app" layout="Overline" />
		</target>
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<logger name="*" minlevel="Error" writeTo="db" />
		<!--<logger name="*" minlevel="Info" writeTo="file" />-->
	</rules>
</nlog>